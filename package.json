{
  "name": "portfolio-jaxomofruatha",
  "version": "1.0.0",
  "description": "John Chritton - Portfolio of development work",
  "main": "index.html",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jchritton/Portfolio.git"
  },
  "author": "John Chritton",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/jchritton/Portfolio/issues"
  },
  "homepage": "https://jchritton.github.io/Portfolio",
  "scripts": {
    "start": "run-p --silent compile bs watch",
    "test": "mocha",
    "compile": "run-p pug sass js",
    "watch": "run-p watch:**",
    "build": "run-p build:**",
    "bs": "browser-sync start -s 'public' --files 'public/index.html' 'public/css/style.css' 'public/bundle.js'",
    "js": "node src/scripts/compile-js.js",
    "pug": "node src/scripts/pug.js",
    "sass": "node src/scripts/sass.js",
    "watch:pug": "chokidar 'src/view/**/*.pug' -c 'npm run pug'",
    "watch:sass": "chokidar 'src/sass/**/*.scss' -c 'npm run sass'",
    "watch:js": "chokidar 'src/js/**/*.js' -c 'npm run js'",
    "build:js": "browserify src/js/index.js -o dist/js/bundle.js -t [ babelify --presets ['env'] ] -t [ uglifyify -cm ]",
    "build:pug": "pug --output-style compressed -o dist src/view/index.pug",
    "build:sass": "node-sass src/sass/style.scss --output-style compressed -o dist/css"
  },
  "devDependencies": {
    "babel-core": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "babelify": "^8.0.0",
    "browser-sync": "^2.23.6",
    "browserify": "^16.1.1",
    "chai": "^4.1.2",
    "chokidar-cli": "^1.2.0",
    "eyeglass": "^1.4.1",
    "mocha": "^5.0.5",
    "node-sass": "^4.8.3",
    "npm-run-all": "^4.1.2",
    "postcss": "^6.0.21",
    "postcss-cssnext": "^3.1.0",
    "pug": "^2.0.3",
    "sharp": "^0.20.1",
    "stylelint": "^9.1.3",
    "stylelint-config-sass-guidelines": "^5.0.0",
    "stylelint-order": "^0.8.1",
    "stylelint-scss": "^2.5.0",
    "stylelint-selector-bem-pattern": "^2.0.0",
    "uglify-es": "^3.3.9",
    "uglify-js": "^3.3.16",
    "uglifyify": "^4.0.5",
    "uncss": "^0.16.2"
  },
  "dependencies": {
    "raf": "^3.4.0"
  }
}
