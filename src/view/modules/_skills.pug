- var skillIcons = viewData.skillIcons;

article(class="l-content-section skills")
  h1.section-heading Skills and Technologies
  div.skills__view
    each skills, i in skillIcons
        section(class=(i === 0 ? "skills__group skills__group--visible" : "skills__group") id=skills.group)
            each icon in skills.icons
                figure(class="skills__icon")
                    img(src=icon)
  nav(class="skills__menu")
      a(class="skills__tab skills__tab--active" data-target="web-dev") Web
      a(class="skills__tab" data-target="core-lang") Core
      a(class="skills__tab" data-target="db-server") Back End
      a(class="skills__tab" data-target="tools") Tools